function count_backups() {
    . "$SCRIPTS_DIR/convert_path"
    TARGET_DIR="$(convert_path "$1")"

    count=0
    for f in "$TARGET_DIR/*"; do
        extension="${f##*.}"
        if [ "$extension" == "tar" ]; then
            count="$(command expr "$count" + 1)"
        fi
    done
    echo "$count"
}
